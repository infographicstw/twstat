doctype html
//- basic libraries: jquery(1.10.2), d3js(3.5.4), angularjs(1.2.3), bootstrap(3.0)/semantic-ui(0.9.3/0.9.5)
//-                  fontawesome(4.4.0), reactjs(0.14.0)
- var use = { cdn: true, og: true, favicon: true }
- var lib = { jquery: true, d3js: true, angular: true, bootstrap: true, semantic: false, fontawesome: true, reactjs: false }
- var assets = "assets"
- var favicon = "http://data.infographics.tw/viz/twstat/thumbnail.png"
- var title = "縣市重要指標五都視覺化"
- var og = {}
- og.title = title
- og.twitter = {type: "summary_large_image", site: "@infographicstw", creator: "@infographicstw"}
- og.domain = "data.infographics.tw"
- og.url = "http://data.infographics.tw/viz/twstat/"
- og.thumbnail = {width: 1200, height: 630, type: "image/png"}
- og.thumbnail.url = "http://data.infographics.tw/viz/twstat/thumbnail.png"
- og.author = "infographicstw"
- og.section = "Taiwan"
- og.keyword = "infographics.tw,statistics,county"
- og.description = "提供縣市重要統計指標之五都資料即時視覺化與六百多個指標數值檔 ( CSV ) 下載"
html(lang="en")
  head(prefix="og: http://ogp.me/ns#")
    meta(charset="utf-8")
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    // libraries
    include library.jade
    // custom files
    link(rel="stylesheet",type="text/css",href="index.css")
    script(type="text/javascript",src="index.js")
  body(ng-app="twstat")
    #root(ng-controller="twstatList")
      .legends
      h1 縣市重要統計指標 #[small 1998 ~ 2014]
      .row
        .col-sm-4
          .panel.panel-default: .panel-body
            input.form-control(ng-model="filter",placeholder="透過搜尋來找資料吧！")
            hr
            #items
              .item(ng-repeat="csv in csvs|filter:{name:filter}:false",
              ng-click="toggle(csv)",ng-class="{'active':csv.active}")
                .pull-right: a(ng-attr-href="csv/county/index/{{csv.name}}.csv") csv #[i.fa.fa-cloud-download]
                span {{csv.name}}
              .text-center 這就是全部囉 #[i.fa.fa-smile-o]
              .text-center 哇，找不到～ #[i.fa.fa-frown-o]
        .col-sm-8
          .panel.panel-default: .panel-body
            #vizs(ng-class="{'hint':!actives.length}")

    #footer
      .pull-right
        .fb-box
          .fb-like-box(data-href="https://www.facebook.com/data.visualize",data-colorscheme="light",
            data-show-faces="false",data-header="false",data-stream="false",data-show-border="false")

      a(href="http://github.com/infographicstw/twstat/",target="_blank") 前端源碼
      a(href="http://github.com/g0v/twstat/",target="_blank") 爬蟲源碼
      span 資料來源: #[a(href="http://statdb.dgbas.gov.tw/pxweb/dialog/statfile9.asp",target="_blank") 中華民國統計資訊網]
      br
      .fb-like-link(style="margin-top: 10px")
        .fb-like(data-href="http://data.infographics.tw/viz/twstat/",data-width="400",data-layout="button_count",data-action="like",data-show-faces="true",data-share="true")

