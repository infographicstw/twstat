@import vars
@import basic

html,body
  width: 100%
  height: 100%
  margin: 0
  padding: 0

#root
  margin: 20px 20px 0

.panel-default
  margin-bottom: 0

#items
  width: 100%
  overflow-y: scroll
  .text-center
    margin: 10px 0
    color: #999
    cursor: default
  .text-center:first-of-type, .text-center:last-of-type
    display: none
  .text-center:nth-of-type(2)
    display: block

hr
  margin: 15px 0 5px

.item
  width: 100%
  padding: 5px
  cursor: pointer
  a
    font-size: 0.9em
    color: #666

.item:hover, .item.active
  background: #ed1d78
  color: #fff
  a
    color: #ff9

#vizs
  overflow-y: scroll
#vizs.hint
  background: url(bk.png) left center no-repeat

svg
  margin-bottom: 20px

path.domain
  fill: none
  stroke: #999
  stroke-width: 1

.legends
  float: right
  margin-right: 10px
  .legend
    display: inline-block
    margin-left: 20px
    .mark
      width: 13px
      height: 13px
      display: inline-block
      vertical-align: middle
      margin-right: 3px
    span
      vertical-align: middle

#footer
  border-top: 1px solid #ccc
  margin: 10px
  padding: 10px
  a
    margin-right: 10px
@media(max-width: 640px)
  #footer .pull-right
    display: none
  .legends
    margin-right: 0
    float: left
    .legend
      margin-left: 10px
  h1
    font-size: 1.9em
  text
    font-size: 10px
